<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_margin="16dp"
        android:background="@drawable/list_background"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_weight="0.51">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/sch_date_icon" />

                <TextView
                    android:id="@+id/txt_sch_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="2015.09.06.(일)"
                    android:textColor="#444"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/sch_time_icon" />

                <TextView
                    android:id="@+id/txt_sch_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="오후 5시 30분"
                    android:textColor="#444"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/sch_location_icon" />

            <TextView
                android:id="@+id/txt_sch_detail_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="불암산길"
                android:textColor="#444"
                android:textSize="18sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_shc_detail_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:text="자연별곡갔다가 불암산길가자"
            android:textColor="#888"
            android:textSize="16sp" />

        <!--버튼영역-->


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal">

        <Button
            android:id="@+id/btn_delete_promise"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/button_pink"
            android:text="삭  제"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_edit_promise"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/button_pink"
            android:text="수  정"
            android:textColor="#fff" />

    </LinearLayout>
</LinearLayout>