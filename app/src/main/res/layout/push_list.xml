<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
	android:background="#ffecd0">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		android:background="@drawable/push_list_background">

		<TextView
			android:id="@+id/txtPushUserName"
			android:text="유호정"
			android:textSize="16sp"
			android:textColor="#ffffff"
			android:gravity="center_vertical|start"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:paddingStart="10dp"
			android:background="@drawable/push_list_name"/>

		<TextView
			android:id="@+id/txtPushCourseName"
			android:text="불암산길"
			android:textSize="16sp"
			android:layout_marginStart="4dp"
			android:textColor="#333"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:layout_toEndOf="@+id/txtPushUserName"/>

		<TextView
			android:id="@+id/txtPushCourseKm"
			android:text="9.79"
			android:textSize="18sp"
			android:textColor="#333"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:layout_toLeftOf="@+id/txtCourseKm"/>

		<TextView
			android:id="@+id/txtCourseKm"
			android:text=" km"
			android:textSize="18sp"
			android:textColor="#333"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:layout_alignParentEnd="true"
			android:layout_marginEnd="10dp"/>

		<Button
			android:id="@+id/btnPush"
			android:text="PUSH"
			android:textSize="14sp"
			android:clickable="false"
			android:textColor="#ffffff"
			android:layout_width="75dp"
			android:layout_height="30dp"
			android:background="@drawable/button_mint"
			android:layout_centerVertical="true"
			android:layout_alignParentEnd="true"/>


	</RelativeLayout>


</LinearLayout>