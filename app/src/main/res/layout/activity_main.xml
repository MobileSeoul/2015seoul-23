<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/videoCourseBackground"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageView
        android:id="@+id/imgCourseBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/walkinforest1"
        android:scaleType="fitXY"/>


    <!-- 실제 컨트롤들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"

        android:background="#1e000000"
        >

        <!-- 사진보기 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icon_pictures"
                android:scaleType="fitCenter"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:text="사진보기"
                android:textSize="18sp"
                android:id="@+id/btnCoursePicture"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 이전코스, 이후코스, 코스이름, 코스KM -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 코스 정보-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <!-- 코스 이름-->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    >
                    <TextView
                        android:text="현재 코스"
                        android:textSize="36sp"
                        android:textColor="#ffffff"
                        android:id="@+id/txtCourseName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="visible"/>
                    <TextView
                        android:text="당현천길"
                        android:textSize="36sp"
                        android:textColor="#ffffff"
                        android:id="@+id/txtCourseName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="invisible"/>
                </FrameLayout>

                <!-- 전체 KM-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:background="@drawable/course_km_line"
                        android:layout_width="70dp"
                        android:layout_height="4dp"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:id="@+id/txtCourseKM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text=" km"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:background="@drawable/course_km_line"
                        android:layout_width="70dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Km | 걸음-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:id="@+id/txtCourseWalkKM"
                android:text="0"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_width="72dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="KM"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="|"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:id="@+id/txtWalkCount"
                android:text="0"
                android:gravity="center"
                android:layout_width="72dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="걸음"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 버튼(나의걸음, 어울림방) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnMyWalk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/button_main_mint"/>

            <ImageView
                android:src="@drawable/icon_mystep"
                android:scaleType="fitCenter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6dp"/>

            <TextView
                android:text="나의걸음"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/button_main_pink"/>

            <ImageView
                android:src="@drawable/icon_ourstep"
                android:scaleType="fitCenter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"/>

            <TextView
                android:text="어울림방"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"/>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
