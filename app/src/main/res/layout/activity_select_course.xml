<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff8ed"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장미희"
            android:textColor="#3d3d3d"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님, 친구들과 걷고 싶은 길을 선택하세요!"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/background_sub_city" />

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <!-- 버튼 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="92.5dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnCourseName6"
                        android:layout_width="125dp"
                        android:layout_height="62.5dp"
                        android:layout_marginEnd="-17.5dp"
                        android:background="@null"
                        android:onClick="SelectCourseButtonClick"
                        android:rotation="-30"
                        android:scaleType="fitXY"
                        android:src="@drawable/course_button_grey" />

                    <ImageButton
                        android:id="@+id/btnCourseName1"
                        android:layout_width="125dp"
                        android:layout_height="62.5dp"
                        android:layout_marginStart="-17.5dp"
                        android:background="@null"
                        android:onClick="SelectCourseButtonClick"
                        android:rotation="30"
                        android:scaleType="fitXY"
                        android:src="@drawable/course_button_grey" />


                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnCourseName2"
                    android:layout_width="125dp"
                    android:layout_height="62.5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="-27.5dp"
                    android:background="@null"
                    android:onClick="SelectCourseButtonClick"
                    android:rotation="90"
                    android:scaleType="fitXY"
                    android:src="@drawable/course_button_grey" />

                <ImageButton
                    android:id="@+id/btnCourseName5"
                    android:layout_width="125dp"
                    android:layout_height="62.5dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-27.5dp"
                    android:background="@null"
                    android:onClick="SelectCourseButtonClick"
                    android:rotation="-90"
                    android:scaleType="fitXY"
                    android:src="@drawable/course_button_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="92.5dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnCourseName4"
                        android:layout_width="125dp"
                        android:layout_height="62.5dp"
                        android:layout_marginEnd="-17.5dp"
                        android:background="@null"
                        android:onClick="SelectCourseButtonClick"
                        android:rotation="-150"
                        android:scaleType="fitXY"
                        android:src="@drawable/course_button_grey" />

                    <ImageButton
                        android:id="@+id/btnCourseName3"
                        android:layout_width="125dp"
                        android:layout_height="62.5dp"
                        android:layout_marginStart="-17.5dp"
                        android:background="@null"
                        android:onClick="SelectCourseButtonClick"
                        android:rotation="150"
                        android:scaleType="fitXY"
                        android:src="@drawable/course_button_grey" />

                </LinearLayout>

            </RelativeLayout>

            <!-- 원 라인 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/course_oval" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:src="@drawable/course_oval" />

            <!-- 코스 이름 -->
            <RelativeLayout
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:layout_centerInParent="true">

                <!-- text -->
                <condi.kr.ac.swu.condidemo.view.CurvTextView
                    android:id="@+id/txtCourseArray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <!-- 지역구 표시 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLandmark"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/landmark1" />

                <TextView
                    android:id="@+id/txtRegionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:text="지역구"
                    android:textSize="24sp" />

            </LinearLayout>

        </RelativeLayout>

        <!-- 말풍선 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtSpeechBox6"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/speechbubble_green"
                    android:gravity="center_horizontal"
                    android:rotation="-30"
                    android:text="유호정 님 선택"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtSpeechBox1"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/speechbubble_green"
                    android:gravity="center_horizontal"
                    android:rotation="30"
                    android:text="유호정 님 선택"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtSpeechBox5"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="-12dp"
                android:background="@drawable/speechbubble_green"
                android:gravity="center_horizontal"
                android:rotation="-90"
                android:text="유호정 님 선택"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtSpeechBox2"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="-12dp"
                android:background="@drawable/speechbubble_green"
                android:gravity="center_horizontal"
                android:rotation="90"
                android:text="유호정 님 선택"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtSpeechBox4"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/speechbubble_green"
                    android:gravity="center_horizontal"
                    android:rotation="-150"
                    android:text="유호정 님 선택"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtSpeechBox3"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/speechbubble_green"
                    android:gravity="center_horizontal"
                    android:rotation="150"
                    android:text="유호정 님 선택"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffecd0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCourseInfoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="코스를 선택하세요"
            android:textColor="#3d3d3d"
            android:textSize="26sp" />

        <!-- 전체 KM-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCourseInfoName"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/course_km_line_black" />

            <TextView
                android:id="@+id/txtChoiceCourseKM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text=" "
                android:textColor="#3d3d3d"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/course_km_line_black" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtCourseInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=" "
            android:textColor="#3d3d3d"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtCourseInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=" "
            android:textColor="#3d3d3d"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnSelectFinal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_mint"
            android:text="선      택"
            android:textColor="#ffffff"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>