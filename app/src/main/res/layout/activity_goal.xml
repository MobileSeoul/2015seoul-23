<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff8ed">

    <ScrollView
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imgMapNext"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"/>


            <RelativeLayout
                android:layout_marginTop="150dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtRegionInfo1"
                    android:text="다음 여정은"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtRegionName1"
                    android:text="성동구"
                    android:textSize="40sp"
                    android:textColor="#00c6c1"
                    android:layout_below="@id/txtRegionInfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:text="입니다."
                    android:textSize="36sp"
                    android:layout_below="@id/txtRegionInfo1"
                    android:layout_toRightOf="@id/txtRegionName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="650dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtRegionInfo2"
                    android:text="다음 여정은"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtRegionName2"
                    android:text="성동구"
                    android:textSize="40sp"
                    android:textColor="#00c6c1"
                    android:layout_below="@id/txtRegionInfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:text="입니다."
                    android:textSize="36sp"
                    android:layout_below="@id/txtRegionInfo2"
                    android:layout_toRightOf="@id/txtRegionName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="1150dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtRegionInfo3"
                    android:text="다음 여정은"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtRegionName3"
                    android:text="성동구"
                    android:textSize="40sp"
                    android:textColor="#00c6c1"
                    android:layout_below="@id/txtRegionInfo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:text="입니다."
                    android:textSize="36sp"
                    android:layout_below="@id/txtRegionInfo3"
                    android:layout_toRightOf="@id/txtRegionName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


    <!-- 코스선택으로 이동-->
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="다음 여정 시작"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_mint"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>