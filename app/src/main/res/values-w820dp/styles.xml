<resources>
    <!-- theme. -->
    <style name="CustomActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionMenuTextColor">@color/actionbar_text_s</item>
    </style>

    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@drawable/actionbar_background2</item>
        <item name="height">30dp</item>
        <item name="actionBarSize">30dp</item>
        <item name="android:actionBarSize">30dp</item>
    </style>

    <style name="TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text_s</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
</resources>
